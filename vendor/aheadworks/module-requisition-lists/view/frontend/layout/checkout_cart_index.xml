<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <uiComponent name="aw_requisition_list_modal_form"/>
        </referenceContainer>
        <referenceContainer name="checkout.cart.container">
            <block class="Magento\Ui\Block\Wrapper" name="checkout.cart.addto.requisition.list" template="Aheadworks_RequisitionLists::cart/requisitionlist.phtml" before="-">
                <arguments>
                    <argument name="list_view_model" xsi:type="object">Aheadworks\RequisitionLists\ViewModel\Catalog\Product\View\RequisitionListProvider</argument>
                    <argument name="uiComponent" xsi:type="string">aw_requisition_list_listing</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
