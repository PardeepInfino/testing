<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Requisition Lists</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="aw_requisition_list_modal_form"/>
            <block name="aw_requisition_list_listing.menu" template="Aheadworks_RequisitionLists::requisition_list.phtml" cacheable="false">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="awRequisitionListCreateLink" xsi:type="array">
                                <item name="component" xsi:type="string">Aheadworks_RequisitionLists/js/ui/components/requisition-list/create-list-link</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <container name="aw_requisition_list_listing.wrapper" htmlTag="div" htmlClass="aw-rl__customer_lists">
                <uiComponent name="aw_requisition_list_listing"/>
            </container>
        </referenceContainer>
    </body>
</page>
