    <body>
        <referenceContainer name="content">
            <uiComponent name="aw_requisition_list_modal_form"/>
        </referenceContainer>
        <referenceContainer name="order.actions.container">
            <block class="Magento\Sales\Block\Order\Info\Buttons" as="buttons" name="sales.order.info.buttons" template="Aheadworks_RequisitionLists::order/info/buttons.phtml" cacheable="false">
                <arguments>
                    <argument name="list_view_model" xsi:type="object">Aheadworks\RequisitionLists\ViewModel\Catalog\Product\View\RequisitionListProvider</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
