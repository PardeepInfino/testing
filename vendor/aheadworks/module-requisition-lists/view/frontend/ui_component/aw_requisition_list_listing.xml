<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_requisition_list_listing.aw_requisition_list_listing_data_source</item>
            <item name="deps" xsi:type="string">aw_requisition_list_listing.aw_requisition_list_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">aw_requisition_list_columns</item>
    </argument>
    <dataSource name="aw_requisition_list_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Aheadworks\RequisitionLists\Ui\DataProvider\RequisitionList\ListingDataProvider</argument>
            <argument name="name" xsi:type="string">aw_requisition_list_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">list_id</argument>
            <argument name="requestFieldName" xsi:type="string">list_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">list_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <paging name="listing_paging" template="Aheadworks_RequisitionLists/ui/grid/paging/empty-paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="totalTmpl" xsi:type="string">Aheadworks_RequisitionLists/ui/grid/paging-total</item>
                </item>
            </argument>
        </paging>
    </listingToolbar>
    <columns name="aw_requisition_list_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="additionalClasses" xsi:type="string">customer_lists customer</item>
            </item>
        </argument>
        <column name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="fieldClass" xsi:type="array">
                        <item name="name" xsi:type="boolean">true</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </column>
        <column name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="fieldClass" xsi:type="array">
                        <item name="description" xsi:type="boolean">true</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="sortOrder" xsi:type="number">15</item>
                </item>
            </argument>
        </column>
        <column name="list_items_count">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Qty of Items</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </column>
        <column name="updated_at" class="Aheadworks\RequisitionLists\Ui\Component\RequisitionList\Listing\Column\LastUpdate">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">date</item>
                    <item name="fieldClass" xsi:type="array">
                        <item name="updated_at" xsi:type="boolean">true</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Last Update</item>
                    <item name="sortOrder" xsi:type="number">25</item>
                </item>
            </argument>
        </column>
        <actionsColumn name="actions" class="Aheadworks\RequisitionLists\Ui\Component\RequisitionList\Listing\Column\Actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">list_id</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/actions</item>
                    <item name="actions" xsi:type="array">
                        <item name="edit" xsi:type="array">
                            <item name="url_route" xsi:type="string">aw_rl/rlist/edit</item>
                            <item name="id_key" xsi:type="string">list_id</item>
                            <item name="label" xsi:type="string" translate="true">Edit</item>
                        </item>
                    </item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
    <listingToolbar name="listing_bottom">
        <paging name="listing_paging" template="Aheadworks_RequisitionLists/ui/grid/paging/paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="totalTmpl" xsi:type="string">Aheadworks_RequisitionLists/ui/grid/empty-paging-total</item>
                </item>
            </argument>
        </paging>
    </listingToolbar>
</listing>
